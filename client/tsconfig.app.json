{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // 여기서부터 진행!
    "emitDeclarationOnly": true, // noEmit:true대신 사용. // 출력 파일은 .d.ts만 생성
    "isolatedModules": true,
    "moduleDetection": "force",
    "outDir": "./dist", // 빌드된 파일 출력 디렉터리 추가
    "declaration": true, // 타입 정의 파일(.d.ts) 생성
    "declarationMap": true, // 타입 정의 파일과 매핑 파일 생성
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Performance & Build */
    "incremental": true, // 빌드 성능 최적화를 위해 증분 빌드 활성화
    "composite": true, // 프로젝트 참조를 위한 필수 설정
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
